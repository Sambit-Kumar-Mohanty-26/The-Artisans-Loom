rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    match /products/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    match /avatars/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    match /verification-submissions/{userId}/{allPaths=**} {
      allow read: if false; 
      
      // Allow an authenticated user to WRITE (upload) to their own verification folder.
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /auction_pieces/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // --- NEW RULE BLOCK FOR AUCTION PIECES ---
    // This allows artisans to upload their masterpiece images for auction
    match /auction_pieces/{userId}/{allPaths=**} {
      // Allow anyone to read auction piece images (for auction page display)
      allow read: if true;
      
      // Allow an authenticated artisan to WRITE to their own auction_pieces folder
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}